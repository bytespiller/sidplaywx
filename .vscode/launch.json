{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "g++ - Build and debug (mingw32-make)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}\\build\\${workspaceFolderBasename}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			//"miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: mingw32-make"
		}
	]
}